{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card p-4" style="max-width: 500px; width: 100%;">

            <div class="text-center mb-3">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" style="height: 100px;">
            </div>

            <h3 class="text-center mb-3">Réinitialiser votre mot de passe</h3>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            {{ form_start(requestForm) }}
            <div class="mb-3">
                {{ form_label(requestForm.email, 'Adresse email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
                {{ form_errors(requestForm.email) }}
            </div>

            <div class="mb-3">
                <small>
                    Saisissez votre adresse email et nous vous enverrons un lien
                    pour réinitialiser votre mot de passe.
                </small>
            </div>

            <div class="d-grid mb-3">
                <button class="btn text-white" style="background-color: #fe8401;">
                    Envoyer l'email de réinitialisation
                </button>
            </div>
            {{ form_end(requestForm) }}

            <div class="text-center mt-4">
                <a href="{{ frontUrl }}/products" class="btn btn-outline-secondary"> Retour à la boutique</a>
            </div>
        </div>
    </div>
{% endblock %}

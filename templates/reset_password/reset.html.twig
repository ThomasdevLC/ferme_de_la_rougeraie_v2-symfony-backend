{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="card p-4" style="max-width: 500px; width: 100%;">

            <div class="text-center mb-3">
                <img src="{{ asset('images/logo.png') }}" alt="Logo" style="height: 100px;">
            </div>

            <h3 class="text-center mb-3">Réinitialiser votre mot de passe</h3>

            {{ form_start(resetForm) }}
            <div class="mb-3">
                {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Votre nouveau mot de passe'}}) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>

            <div class="d-grid mb-3">
                <button class="btn text-white" style="background-color: #fe8401;">
                    Réinitialiser le mot de passe
                </button>
            </div>
            {{ form_end(resetForm) }}

        </div>
    </div>
{% endblock %}

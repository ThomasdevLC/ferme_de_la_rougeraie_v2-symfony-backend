{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="pt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="title fw-bold fs-3">üì± Utilisateurs</h1>
            {# on passe la r√©f√©rence du bouton √† la fonction #}
            <button class="btn btn-primary" onclick="copyEmails(this)">üìã Copier tous les emails</button>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>T√©l√©phone</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                        <td class="user-email">{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                    </tr>
                {% else %}
                    <tr><td colspan="3">Aucun utilisateur trouv√©.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function copyEmails(btn) {
            // Sauvegarde le texte d'origine du bouton
            const original = btn.innerHTML;

            // R√©cup√®re et copie les emails
            const emails = Array.from(document.querySelectorAll('.user-email'))
                .map(el => el.textContent.trim())
                .join(', ');

            navigator.clipboard.writeText(emails)
                .then(() => {
                    // Change le texte du bouton
                    btn.textContent = 'Emails copi√©s !';
                    btn.disabled = true;
                    // Apr√®s 3 secondes, on remet le texte et on r√©active
                    setTimeout(() => {
                        btn.innerHTML = original;
                        btn.disabled = false;
                    }, 3000);
                })
                .catch(err => {
                    console.error('Erreur lors de la copie :', err);
                    // Tu peux g√©rer une alerte d'erreur ici si n√©cessaire
                });
        }
    </script>
{% endblock %}

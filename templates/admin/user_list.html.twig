{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="pt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="title fw-bold fs-3">ðŸ“± Utilisateurs</h1>
            {# on passe la rÃ©fÃ©rence du bouton Ã  la fonction #}
            <button class="btn btn-primary" onclick="copyEmails(this)">ðŸ“‹ Copier tous les emails</button>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>TÃ©lÃ©phone</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstName }} {{ user.lastName }}</td>
                        <td class="user-email">{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                    </tr>
                {% else %}
                    <tr><td colspan="3">Aucun utilisateur trouvÃ©.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function copyEmails(btn) {
            const original = btn.innerHTML;

            const emails = Array.from(document.querySelectorAll('.user-email'))
                .map(el => el.textContent.trim())
                .join(', ');

            navigator.clipboard.writeText(emails)
                .then(() => {
                    btn.textContent = 'Emails copiÃ©s !';
                    btn.disabled = true;
                    setTimeout(() => {
                        btn.innerHTML = original;
                        btn.disabled = false;
                    }, 2500);
                })
                .catch(err => {
                    console.error('Erreur lors de la copie :', err);
                });
        }
    </script>
{% endblock %}

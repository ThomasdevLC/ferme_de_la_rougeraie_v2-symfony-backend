{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="table-responsive pt-5">

        {% set pickupDays = {
            'TUESDAY':  'Mardi',
            'THURSDAY': 'Jeudi'
        } %}

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="title fw-bold fs-3 m-0">ðŸ“‹ Tableau</h1>

            <ul class="nav nav-pills">
                {% for value, label in pickupDays %}
                    <li class="nav-item">
                        <a
                                href="{{ ea_url().set('pickup', value) }}"
                                class="nav-link {{ selectedPickupDay.value == value ? 'active' : '' }}"
                        >
                            {{ label }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Produit</th>
                {% for user in users %}
                    <th class="text-center">
                        {{ user.firstName }}<br>{{ user.lastName }}
                    </th>
                {% endfor %}
            </tr>
            </thead>

            <tbody>
            {% for product in products %}
                <tr>
                    <td>
                        {{ product.name }}
                        <small class="text-muted ms-2">({{ product.unit }})</small>
                    </td >
                    {% for user in users %}
                        <td class="justify-start  text-center">{{ quantitiesTab[user.id][product.id] ?? 0 }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

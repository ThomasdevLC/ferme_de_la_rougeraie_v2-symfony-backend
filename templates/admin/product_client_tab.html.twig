{# templates/admin/product_client_tab.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="table-responsive pt-5">
        <h1 class="title fw-bold fs-3">ðŸ“‹ Tableau</h1>

        {% set pickupDays = {
            'TUESDAY':  'Mardi',
            'THURSDAY': 'Jeudi'
        } %}

        <ul class="nav nav-pills mb-4">
            {% for value, label in pickupDays %}
                <li class="nav-item">
                    <a
                            href="{{ ea_url().set('pickup', value) }}"
                            class="nav-link {{ selectedPickupDay.value == value ? 'active' : '' }}"
                    >
                        {{ label }}
                    </a>
                </li>
            {% endfor %}
        </ul>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Client</th>
                {% for product in products %}
                    <th scope="col">{{ product.name }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.firstName }} {{ user.lastName }}</td>
                    {% for product in products %}
                        <td>{{ quantitiesTab[user.id][product.id] ?? 0 }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

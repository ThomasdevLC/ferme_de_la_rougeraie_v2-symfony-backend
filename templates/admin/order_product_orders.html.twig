{# templates/admin/order_product_orders.html.twig #}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .table th, .table td {
        padding: 12px 15px;
        text-align: left;
    }

    .table thead {
        background-color: #4A90E2;
        color: #ffffff;
    }

    .table tbody tr:nth-child(odd) {
        background-color: #f4f7fc;
    }

    .table tbody tr:hover {
        background-color: #e0ebf8;
    }

    .empty-message {
        font-family: Arial, sans-serif;
        color: #777;
        padding: 10px;
    }
</style>

{% if field.value is not empty %}
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            {# Ajoutez d'autres colonnes selon vos besoins #}
        </tr>
        </thead>
        <tbody>
        {% for productOrder in field.value %}
            <tr>
                <td>{{ productOrder.product.name }}</td>
                <td>{{ productOrder.quantity }}</td>
                <td>{{ productOrder.product.getPriceInEuros() }}</td>
                {# Exemple de colonne supplémentaire :
                    <td>{{ productOrder.getLineTotal() }}</td>
                #}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <p class="empty-message">Aucun produit commandé</p>
{% endif %}